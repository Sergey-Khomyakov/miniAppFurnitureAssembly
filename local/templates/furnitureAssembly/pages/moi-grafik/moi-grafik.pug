extends ../../../../../pug/layout/_layout.pug
include ../../../../../pug/layout/_head.pug
include ../../../../../pug/layout/_header.pug
include ../../../../../pug/Components/_navigation.pug

block scripts
    - var path = "./local/templates/furnitureAssembly"
    script(src="https://telegram.org/js/telegram-web-app.js")
    script(src=`${path}/libs/jquery/jquery-3.7.1.min.js`)
    script(src=`${path}/libs/jquery/jquery-ui.min.js`)
    script(src=`${path}/libs/air-datepicker-3.4.0/air-datepicker.js`)
    script(src=`${path}/js/common.js`)
    script(src=`${path}/pages/moi-zakazy/js/data.js?v=11`)
    script(src=`${path}/pages/moi-grafik/js/data.js?v=2`)
    script(src=`${path}/pages/moi-grafik/js/index.js?v=14`)


block head
  - var path = "./local/templates/furnitureAssembly"
  link(rel="stylesheet", href=`${path}/libs/air-datepicker-3.4.0/air-datepicker.css`)
  link(rel="stylesheet", href=`${path}/pages/moi-grafik/css/customeCalendar.css`)
  link(rel="stylesheet", href=`${path}/css/style.css`)
  +head('Мой график - сборка мебели', '')

block content
    - var path = "./local/templates/furnitureAssembly"
    div(class="max-w-[45rem] mx-auto relative")
        div(class="px-4 h-max bg-[#EBE7E7]")
            header(class="py-3")
                div(class="grid grid-cols-1fr-auto gap-2 items-center justify-end")
                    div(class="flex gap-2 items-center")
                        p(class="font-montserrat font-semibold text-base text-black") График доступности
                        img(help="", src=`${path}/img/icons/Question.svg`, alt="иконка", class="w-6 h-6 object-contain filter-red-600 cursor-pointer")
                    a(href="https://sergey-khomyakov.github.io/miniAppFurnitureAssembly/notifications.html", class="relative cursor-pointer")
                        img(src=`${path}/img/icons/Bell.svg`, alt="иконки", class="w-6 h-6 object-contain filter-black")
                        div(class="rounded-full w-2 h-2 absolute right-[0.125rem] top-0 bg-red-600")
        main
            div(class="flex flex-col gap-4 pt-2 pb-16 items-center bg-[#EBE7E7] rounded-b-[2rem]")
                div(id="calendar", class="w-full px-4")
            div(class="px-4")
                div(class="rounded-[2rem] bg-white shadow-lg min-h-60 -mt-10 p-6 flex flex-col gap-3 mb-24")
                    div(class="w-full h-auto grid grid-cols-1fr-auto gap-2")
                        p(calendarSelectDay="", class="font-montserrat font-normal text-xl text-black") Сегодня
                        div(btnNav="",class="flex gap-2 items-center")
                    div(orderBody="", class="flex flex-col gap-4")
            -
                var items = [
                    {
                        link: "https://sergey-khomyakov.github.io/miniAppFurnitureAssembly/",
                        text: "Главная",
                        src: "./local/templates/furnitureAssembly/img/icons/House.svg",
                    },
                    {
                        link: "https://sergey-khomyakov.github.io/miniAppFurnitureAssembly/profile.html",
                        text: "Профиль",
                        src: "./local/templates/furnitureAssembly/img/icons/UserCircle.svg",
                    },
                    {
                        link: "https://sergey-khomyakov.github.io/miniAppFurnitureAssembly/moi-zakazy.html",
                        text: "Заказы",
                        src: "./local/templates/furnitureAssembly/img/icons/Package.svg",
                    },
                    {
                        link: "https://sergey-khomyakov.github.io/miniAppFurnitureAssembly/moi-grafik.html",
                        text: "График",
                        src: "./local/templates/furnitureAssembly/img/icons/Calendar.svg",
                    },
                ]
            +nav(3, items)
            dialog#Help(class="rounded-xl")
                div(class="flex items-center justify-end p-4")
                    p(titleCard="", class="font-montserrat font-semibold text-2xl text-black")
                    img(closeModal="", src=`${path}/img/icons/X.svg`, alt="иконки", class="w-6 h-6 object-contain filter-black cursor-pointer")
                div(class="flex flex-col gap-2 px-4")
                    div(class="flex flex-col gap-2")
                        div(class="flex gap-1 items-center")
                            div(class="w-4 h-4 border border-black bg-white rounded-sm")
                            p(class="font-montserrat font-semibold text-gray-600 text-base") - Рабочий день
                        div(class="flex gap-1 items-center")
                            div(class="w-4 h-4 border border-black bg-[#F3BABA] rounded-sm")
                            p(class="font-montserrat font-semibold text-gray-600 text-base") - Выходной день
                    p(class="font-montserrat font-semibold text-sm text-black") Можно назначать выходной не ранее чем через 3 дня от текущей даты.
                    p(class="font-montserrat font-semibold text-sm text-black") 
                        | Eсли у вас произошли изменения в ближайшие 3 дня - звоните Диспетчеру 
                        br
                        | +7 000 000 00 00
            dialog#Order(class="rounded-xl")
                div(class="flex items-center justify-between p-4")
                    p(titleCard="", class="font-montserrat font-semibold text-2xl text-black") №
                    img(closeModal="", src=`${path}/img/icons/X.svg`, alt="иконки", class="w-6 h-6 object-contain filter-black cursor-pointer")
                div(dialogBody="", class="flex flex-col gap-4 px-4 h-full pb-24")