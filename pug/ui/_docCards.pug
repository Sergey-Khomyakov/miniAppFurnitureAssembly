include ./_link.pug
mixin docCards(items)
    each item in items 
        div(docId=item.id, class="flex gap-5")
            div(class="w-12 h-12 shrink-0")
                img(src=item.img, alt="Иконка", class="w-full h-full object-contain",)
            div(class="flex flex-col gap-1")
                if item.type !== null
                    p(class="font-montserrat font-semibold text-base text-primary") #{item.type}
                p(class="font-montserrat font-semibold text-base") #{item.name}
                div(class="flex gap-2 xs:flex-col md:flex-row justify-between")
                    div(class="flex gap-2 xs:flex-col md:flex-row")
                        p(class="font-montserrat font-semibold text-base text-gray-500") #{item.date}
                        p(class="font-montserrat font-semibold text-base text-gray-500") Действует до | #{item.dateFrom}
                    div(class="xs:ml-auto md:ml-0")
                        +link("#", null, "Скачать")
