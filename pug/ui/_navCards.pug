mixin navCards(items)
    each item in items 
        div(class="flex flex-col gap-3 justify-between group p-4 rounded-md relative border min-w-52 h-32")
            div(class="w-8 h-8")
                img(src=item.img, alt="Иконка", class="w-full h-full object-contain", style="filter: invert(59%) sepia(62%) saturate(3426%) hue-rotate(220deg) brightness(99%) contrast(98%);")
            a(href=item.link, class="font-montserrat font-semibold text-base group-hover:text-primary after:content-[''] after:absolute after:inset-0") #{item.name}