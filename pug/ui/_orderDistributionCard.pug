mixin orderDistributionCard(items)
    each item in items 
        div(orderDistributionCard="", data-cardId=item.id, class="flex flex-col gap-2 p-2 rounded-md border border-solid border-gray-300 shadow-sm")
            div(class="flex justify-between gap-2")
                a(href=item.link, class="font-montserrat font-semibold text-base text-black hover:text-[#7a5bca]") #{item.name}
                p(class="font-montserrat font-semibold text-base text-gray-400") #{item.date}
            div(class="flex flex-col gap-1")
                div(class="flex gap-2")
                    P(class="font-montserrat font-semibold text-base text-black") ФИО клиента: #{item.client.name}
                div(class="flex gap-2")
                    P(class="font-montserrat font-semibold text-base text-black") Номер клиента: #{item.client.phone}
                div(class="flex flex-col gap-1")
                    P(class="font-montserrat font-semibold text-base text-black") Адрес:
                    P(class="font-montserrat font-semibold text-base text-black") #{item.client.adress}
