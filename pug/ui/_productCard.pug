mixin productCard(items)
    - var path = "./local/templates/furnitureAssembly"
    each item in items 
        div(class="flex flex-col gap-4 rounded-md shadow-sm")
            img(src=item.src, alt="картинка товара", class="aspect-16-9 w-full object-cover rounded-sm")
            p(class="font-montserrat text-base font-normal leading-[1.3] text-black") #{item.title}
            a(href="#", class="inset-0")