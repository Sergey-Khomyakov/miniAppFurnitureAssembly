mixin userDistributionCard(items)
    each item in items 
        div(userDistributionCard="",data-userId=item.id, class="flex flex-col gap-2 p-2 rounded-md border border-solid border-gray-300 shadow-sm")
            a(href=item.link, class="font-montserrat font-semibold text-base text-black hover:text-[#7a5bca]") #{item.name}
            div(userDistributionList="", class="flex flex-col gap-2 max-h-80 h-full overflow-y-auto")
                div(class="flex flex-col items-center justify-center py-2 border-2 border-primary border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100")
